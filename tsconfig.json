{
  "compilerOptions": {
    "outDir": "./back/static/",
    "rootDir": "./front/",
    "sourceMap": true,
    "module": "es6",
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es5",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "./front/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
